<h1>Available</h1>

<ul class="thumbnails">
<% @contents.each do |content| %>
	<li class="content-thumb thumbnail">
		<div class= "span12">
		<div class="thumb-header">
			<h4><%= link_to content.name, topic_content_path(@topic, content)%></h4>
		</div>
	     	<div class="row-fluid">
	     		<div class="thumb-body span4">
	     			<% if content.image.present? %>
	     				<%= image_tag(content.image) %>
	     			<% else %>
	     				<%= image_tag('missing_vid.jpeg') %>
	     			<% end %>
	     		</div>
	     		<div class="thumb-body-container span8">
	     			<div class="thumb-description">
	     			<p><%= content.description %></p>
	     			</div>
	     			<div>
						<p>
						  <i class="icon-heart"></i> Favorite
						| <i class="icon-share"></i> <%= link_to "Link", content.url%>
						| <% content.tags.each do |tag| %>
							<%= link_to tag_path(tag) do %>
								<span class="label label-info"><%= tag.name %></span>
							<% end %>
						  <% end %>
					  </p>
				   </div>
				</div>
		    </div>
	   </div>
	</li>
<% end %>
</ul>

<%= link_to 'New Content', new_topic_content_path(@topic) %>
