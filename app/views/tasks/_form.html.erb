<%= simple_form_for([@topic,@task]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :topic %>
    <%= f.association :level %>
    <%= f.input :url %>
    <%= f.input :est_completion %>
   
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
