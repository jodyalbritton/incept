<%= simple_form_for(([@topic,@task]), :html => { :class => 'well' }) do |f| %>
  <%= f.error_notification %>
  	<legend>Task Form</legend>
  	    <fieldset>
  		<%= f.input :name %>
  		<div class="task description row-fluid">
  		<div class="span6">
        <%= f.input :description, :input_html => {:class=>"input input-span5"}%>
        </div>
  		
		</div>
 
  		<div class="row-fluid">
  		 
  		       <div class="span2">
  		          <%= f.association :level, :input_html => {:class=> "input input-medium"} %>
               </div>
               <div class="span6">
               	<%= f.input :est_completion %>
               </div>
               <div class="span4">
               	<%= f.input :url, :input_html => {:class=> "input input-xlarge"} %>
               </div>
       
        </div>
    </fieldset>
  	<div class="form-actions">
    <%= f.button :submit %>
    </div>

<% end %>
