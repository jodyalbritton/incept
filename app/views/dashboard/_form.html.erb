
<%= simple_form_for task.task_completion, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
  	<legend></legend>
  	<%= f.input :name %>
  	<%= f.input :complete %>
  	<%= f.input :completed_at, :input_html => {:class=> "input input-small"} %>
 	<%= f.input :started_at , :input_html => {:class=> "input input-small"}%>
 	<%= f.input :rating %>
  	<%= f.input :content_id %>
    <%= f.input :reccuring %>
    <%= f.input :interval %>
    <%= f.input :interval_modifier %>
  </fieldset>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tasks_path, :class => 'btn' %>
  </div>
<% end %>
