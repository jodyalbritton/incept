<%- model_class = Category -%>
<div class="page-header row-fluid">
 <div class="span8">
  <h1><%= @category.name %></h1>
 </div>
 <div class="span4 page-controls">
 <div class="btn-toolbar">
  <div class="btn-group">
      <a href="#" class="btn btn-inverse"><i class="icon-white icon-heart"></i></a>
     
      
  </div>
  <div class="btn-group">
  	  <%= link_to edit_category_path(@category), :class=> "btn btn-inverse" do %>
  	  <i class="icon-white icon-edit"></i>
  	  <% end %>
      <%= link_to category_path(@category), :class=> "btn btn-inverse", :method => 'delete' do %>
  	  <i class="icon-white icon-trash"></i>
  	  <% end %>
  </div>
</div>
</div>

</div>
<div class="page-body">
	<p>
	<%= @category.description %>
	</p>
</div>

