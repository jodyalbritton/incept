<h1>Listing employments</h1>

<table>
  <tr>
    <th>User</th>
    <th>School</th>
    <th>Enrolled from</th>
    <th>Enrolled to</th>
    <th>Major</th>
    <th>Course of study</th>
    <th>Credit hours</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employments.each do |employment| %>
  <tr>
    <td><%= employment.user_id %></td>
    <td><%= employment.school_id %></td>
    <td><%= employment.enrolled_from %></td>
    <td><%= employment.enrolled_to %></td>
    <td><%= employment.major %></td>
    <td><%= employment.course_of_study %></td>
    <td><%= employment.credit_hours %></td>
    <td><%= link_to 'Show', employment %></td>
    <td><%= link_to 'Edit', edit_employment_path(employment) %></td>
    <td><%= link_to 'Destroy', employment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

