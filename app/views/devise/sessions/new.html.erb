<div class="row">
    <div class="span4 offset4">
      <div class="well">
        <legend>Sign in</legend>
			<%= simple_form_for(resource, :as => resource_name, :html => {:class=> "form form-vertical"}, :url => session_path(resource_name)) do |f| %>
  			<div class="form-inputs">
    		  <%= f.input :email, :required => false, :autofocus => true, :label => false%>
    		  <%= f.input :password, :required => false, :label => false%>
    		  <label class="checkbox">
              	<%= f.input :remember_me, :as => :boolean,  :label => false  if devise_mapping.rememberable?%> Remember Me
              </label>
  			</div>

  			<div class="form-actions">
    		  <%= f.button :submit, "Sign in", :class=>"btn-info btn" %>
  			</div>
			<% end %>
		 </div>
    </div>
</div>
<%= render "devise/shared/links" %>
