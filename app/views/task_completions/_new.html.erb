

 
<%= simple_form_for @task_completion, :html => {:class=> "form form-horizontal"} do |f| %>
  <%= f.button :submit, "Update", :class => "btn btn-mini btn-primary input-append pull-right" %>
  <%= f.input :active_minutes, :input_html => {:class => "input input-mini"}%>
  <%= f.input :complete , :value => true%>
  

 
  <%= f.input :task_id, :as => "hidden", :input_html => {:value => task.id} %>
  <%= f.input :user_id, :as => "hidden", :value => current_user.id%>


<% end %>
