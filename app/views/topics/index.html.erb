<div>
	<%= render "shared/breadcrumb"%>
</div>
<div class"page-body">
	<!-- Authorize Moderate Bar -->
	<% if current_user.has_role? :admin %>
	<div class="moderater-bar">
		<div class="btn-toolbar">
  			<div class="btn-group">
      			<%= link_to new_topic_path, :class=> "btn btn-primary" do %>
      				<i class="icon-white icon-plus"></i>
      			<% end %>
  			</div>
		</div>
	</div>
	<% end %>
	<!-- End Authorize Moderate Bar -->
		<div class="topic-main">
			<ul class="thumbnails">
				<% @topics.each do |topic| %>
					<li class="span3">
						<div class="thumbnail">
							<h4><%= topic.title %></h4>
							<hr class="lessspace">
							<div class="topic-description">
								<p>
								<%= topic.description %>
								</p>
							</div>
							<%= link_to "Go", topic_path(topic), :class=>"btn btn-large btn-block btn-primary"%>
						</div>
					</li>
				<% end %>
			</ul>
		</div>	
</div>
