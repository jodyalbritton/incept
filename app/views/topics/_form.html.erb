<%= simple_form_for(@topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :title %>
    <%= f.input :description, :input_html => {:class=> "input span5"}%>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %> <%= link_to 'Back', t_index_path %>
  </div>
<% end %>
