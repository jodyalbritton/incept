<% @topic.tasks.each do |task| %>

    <div class="row-fluid">
    	<div class="span8">  
        	<h4><strong><h3><%= link_to task.name, topic_task_path(@topic, task) %></h3></strong></h4>
        	<p> 
            <span class="label label-info"><%= task.level.name %></span>
         
       		<% if task.completed_by_me(current_user) == true %>
       			| <span class="label label-info">Completed</span>
       		<% else %>
       		    | <span class="label label-error">Not Complete</span>
       		<% end %>
       		
           </p> 
        </div>
    	<div class="span4">
    		<div class="btn-toolbar pull-right">
  			<div class="btn-group">
      			<a href="#" class="btn"><i class="icon-white icon-comment"></i></a>
     		    <a href="#" class="btn"><i class="icon-white icon-share-alt"></i></a>
      			<a href="#" class="btn"><i class="icon-white icon-heart"></i></a>
  			</div>
	        </div>
           
       </div>
    </div>
    <div class="row-fluid">
      <div class="span2">
        <%= link_to topic_task_path(@topic, task), :class=> "thumbnail" do %>
            <img src="http://placehold.it/260x180" alt="">
        <% end %>
      </div>
      <div class="span10">      
        <p>
        	<%= task.description %>
        </p>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <p></p>
        <p>
            <i class="icon-calendar"></i> <%= task.created_at.strftime("%b %d, %Y")%>
          | <i class="icon-comment"></i> <a href="#">3 Comments</a>
          | <i class="icon-share"></i> <a href="#"><%= task.completes %> Completions</a>
          | <i class="icon-heart"></i> <a href="#">13 Loved This</a>

        </p>
      </div>
    </div>

<hr>
<% end %>
