<div class="row-fluid">
	<div class="span3 well">
		<h3><%= @user.username %></h3>
		<h4><%= @user.points %></h4>
		<ul class="thumbnails">
			<% @user.badges.each do |badge| %>
				<li class="thumbnail"><%= badge.name%></li>
			<% end %>
		</ul>
		
	</div>
	<div class="span6 body">
		<h4>Recent Education</h4>
		
		<h4>Recent Employment</h4>
	</div>
	<div class="span3 r_sidebar">
</div>
<% @tasks_by_name.sort.each do |name, tasks| %>
<table class="table table-bordered table-striped">
  <thead>
  	<tr>
  		<th class="span8"><%= name %></th>
  		<th></th>
  	</tr>
  </thead>
  <tbody>
  <% for task in tasks %>
  <tr>
  	<td><%= task.completed_at.strftime("%d %B, %Y")%> </td>
  	<td><%= task.active_minutes %></td>
  </tr>
  <% end %>
  <tr>
  	<td class="span8">Total Minutes</td>
  	<td class="span4"><%= tasks.map { |t| t.active_minutes}.sum %></td>
  </tr>
 </tbody>
 </table>
<% end %>

